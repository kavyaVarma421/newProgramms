package com.bridgelabz.unit;

import java.util.Scanner;

public class TemperatureConversion 
{


	static double conversion(double f, double c)
	{
		double celToFahrenhit = (f - 32) * 5/9;
		double fahrenhitToCel = (c * 9/5) + 32; 
		
		
		return conversion(fahrenhitToCel, celToFahrenhit);
		
	}
	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("enter fahrenhit value:");
		double f = sc.nextDouble();
		System.out.println("enter celcious value:");
		double c = sc.nextDouble();
		conversion(f, c);
		
	}
	
}
